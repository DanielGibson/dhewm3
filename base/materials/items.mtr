table lcdFlicker { { 0.5, 0.5, 0.5, 0.5, 0.44, 0.47, 0.45, 0.45, 0.5, 0.5, 0.4, 0.4, 0.4, 0.4, 0.4, 0.4 } }
table lcdFlicker2 { { 0.6, 0.6, 0.6, 0.6, 0.54, 0.57, 0.55, 0.55, 0.6, 0.6, 0.5, 0.5, 0.5, 0.5, 0.5, 0.5 } }
